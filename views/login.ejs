<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Polling App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> 
    <link rel="stylesheet" href="./style/loginmin.css">
    
</head>
<body>
<div class="container">
<h1 id="title">Polling App</h1>
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <div  align="center"><button id="loginButton" type="submit" class="btn btn-warning btn-lg">Login</button></div>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <div class="footer">desinged & coded by <a href="http://codepen.io/Chan11/" target="_blank"><strong>Chandrahas</strong></a></div>

</div>

</div>
</body>
</html>